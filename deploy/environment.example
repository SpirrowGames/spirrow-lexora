# Lexora Environment Configuration
# Copy this file to /etc/lexora/environment and adjust values

# vLLM Backend
LEXORA_VLLM__URL=http://localhost:8000
LEXORA_VLLM__TIMEOUT=120.0
LEXORA_VLLM__CONNECT_TIMEOUT=5.0

# Server
LEXORA_SERVER__HOST=0.0.0.0
LEXORA_SERVER__PORT=8001

# Rate Limiting
LEXORA_RATE_LIMIT__ENABLED=true
LEXORA_RATE_LIMIT__DEFAULT_RATE=10.0
LEXORA_RATE_LIMIT__DEFAULT_BURST=20

# Retry
LEXORA_RETRY__MAX_RETRIES=3
LEXORA_RETRY__BASE_DELAY=1.0
LEXORA_RETRY__MAX_DELAY=30.0

# Logging
LEXORA_LOGGING__LEVEL=INFO
LEXORA_LOGGING__FORMAT=json
